{
  "name": "ngrx-testing",
  "version": "0.2.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --port 4000 --proxy-config proxy.conf.json",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "jest",
    "test:watch": "jest --watch --maxWorkers=1 --no-watchman",
    "json-server": "json-server ./server/db.json -p 4100 -r ./server/config/routes.json -S ./server/snapshots",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "e2e": "npm run cypress:run"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~12.2.6",
    "@angular/cdk": "~12.2.6",
    "@angular/common": "~12.2.6",
    "@angular/compiler": "~12.2.6",
    "@angular/core": "~12.2.6",
    "@angular/flex-layout": "^12.0.0-beta.35",
    "@angular/forms": "~12.2.6",
    "@angular/material": "~12.2.6",
    "@angular/platform-browser": "~12.2.6",
    "@angular/platform-browser-dynamic": "~12.2.6",
    "@angular/router": "~12.2.6",
    "@ngrx/component": "~12.4.0",
    "@ngrx/data": "~12.4.0",
    "@ngrx/effects": "~12.4.0",
    "@ngrx/entity": "~12.4.0",
    "@ngrx/router-store": "~12.4.0",
    "@ngrx/store": "~12.4.0",
    "@ngrx/store-devtools": "~12.4.0",
    "dayjs": "~1.10.7",
    "faker": "~5.5.3",
    "immer": "~9.0.6",
    "json-server": "~0.16.3",
    "lodash": "~4.17.21",
    "ngx-infinite-scroll": "~10.0.1",
    "rxjs": "~6.6.7",
    "tslib": "~2.3.1",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~12.2.6",
    "@angular/cli": "~12.2.6",
    "@angular/compiler-cli": "~12.2.0",
    "@testing-library/angular": "~10.11.0",
    "@testing-library/cypress": "~8.0.1",
    "@testing-library/dom": "~8.6.0",
    "@testing-library/jest-dom": "~5.14.1",
    "@testing-library/user-event": "~13.2.1",
    "@types/faker": "~5.5.8",
    "@types/jest": "~27.0.2",
    "@types/lodash": "~4.14.173",
    "@types/node": "~16.9.6",
    "@types/sinon": "~10.0.3",
    "cypress": "~8.5.0",
    "cypress-wait-until": "~1.7.1",
    "cypress-pipe": "~2.0.0",
    "jest": "~27.2.2",
    "jest-preset-angular": "~10.0.0",
    "msw": "~0.35.0",
    "sinon": "~11.1.2",
    "typescript": "~4.3.5"
  },
  "jest": {
    "preset": "jest-preset-angular",
    "setupFilesAfterEnv": [
      "<rootDir>/src/setup-jest.ts"
    ],
    "moduleNameMapper": {
      "^@app/(.*)$": "<rootDir>/src/app/$1",
      "^@shared/(.*)$": "<rootDir>/src/app/shared/$1",
      "^@api/(.*)$": "<rootDir>/src/app/core/api/$1",
      "^src/(.*)$": "<rootDir>/src/$1"
    },
    "maxWorkers": "50%",
    "testPathIgnorePatterns": [
      "cypress"
    ]
  }
}
